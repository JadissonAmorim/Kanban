@model KanbanProject.Models.ToDo

@{
    ViewData["Title"] = "Edit";
}
<body onload="myFunction()">
<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group" id="div1">
                <label asp-for="Resquested" class="control-label"></label>
                <input asp-for="Resquested" class="form-control" id="resquested"/>
                <span asp-validation-for="Resquested" class="text-danger"></span>
            </div>
            <div class="form-group" id="div2">
                <label asp-for="Inprogress" class="control-label"></label>
                <input asp-for="Inprogress" class="form-control" id="inprogress"/>
                <span asp-validation-for="Inprogress" class="text-danger"></span>
            </div>
            <div class="form-group" id="div3">
                <label asp-for="Done" class="control-label"></label>
                <input asp-for="Done" class="form-control" id="done"/>
                <span asp-validation-for="Done" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" id="hehe"/>
                <a asp-action="Index"><input type="button" value="Retornar" id="hehe"/></a>
            </div>
        </form>
    </div>
</div>
<style>
    #hehe {
  height: 25px;
  width: 100px;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 2.5px;
  font-weight: 500;
  color: #000;
  background-color: #DCDCDC;
  border: 1px;
  box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
}

#hehe:hover {
  color: #D80000;
}
</style>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
<script>
    var div1 = document.getElementById("div1");
    var div2 = document.getElementById("div2");
    var div3 = document.getElementById("div3");
    var resquested = document.getElementById("resquested").value;
    var inprogress = document.getElementById("inprogress").value;
    var done = document.getElementById("done").value;
    async function myFunction(){
        if (resquested == ""){
            div1.style.display = "none";
        }
        if (inprogress == ""){
            div2.style.display = "none";
        }
        if (done == ""){
            div3.style.display = "none";
        }
    }
</script>